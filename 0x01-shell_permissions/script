#!/bin/bash
echo "su betty" >> 0-iam_betty && echo "whoami" >> 1-who_am_i && echo "groups" >> 2-groups && echo "chown betty hello" >> 3-new_owner && echo "touch hello" >> 4-empty && echo "chmod u+x hello" >> 5-execute && echo "chmod ug+x,o+r hello" >> 6-multiple_permissions && echo "chmod ugo+x hello" >> 7-everybody && echo "chmod 007 hello" >> 8-James_Bond && echo "chmod 753 hello" >> 9-John_Doe && echo "chmod --reference=olleh hello" >> 10-mirror_permissions && echo "chmod -R +x ." >> 11-directories_permissions && echo "mkdir -m 751 my_dir" >> 12-directory_permissions && echo "chgrp school hello" >> 13-change_group && echo "chown vincent:staff *" >> 100-change_owner_and_group && echo "chown -h vincent:staff _hello" >> 101-symbolic_link_permissions && echo "chown --from=guillaume betty hello" >> 102-if_only && echo "telnet towel.blinkenlights.nl" >> 103-Star_Wars
chmod u+x 0-iam_betty && chmod u+x 1-who_am_i && chmod u+x 2-groups && chmod u+x 3-new_owner && chmod u+x 4-empty && chmod u+x 5-execute && chmod u+x 6-multiple_permissions && chmod u+x 7-everybody && chmod u+x 8-James_Bond && chmod u+x 9-John_Doe && chmod u+x 10-mirror_permissions && chmod u+x 11-directories_permissions && chmod u+x 12-directory_permissions && chmod u+x 13-change_group && chmod u+x 100-change_owner_and_group && chmod u+x 101-symbolic_link_permissions && chmod u+x 102-if_only && chmod u+x 103-Star_Wars
./0-iam_betty && ./1-who_am_i && ./2-groups && ./3-new_owner && ./4-empty && ./5-execute && ./6-multiple_permissions && ./7-everybody && ./8-James_Bond && ./9-John_Doe && ./10-mirror_permissions && ./11-directories_permissions && ./12-directory_permissions && ./13-change_group && ./100-change_owner_and_group && ./101-symbolic_link_permissions && ./102-if_only && ./103-Star_Wars
