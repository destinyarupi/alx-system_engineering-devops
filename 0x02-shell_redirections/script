echo "#!/bin/bash" | tee 0-hello_world 1-confused_smiley 2-hellofile 3-twofiles 4-lastlines 5-firstlines 6-third_line 7-file 8-cwd_state 9-duplicate_last_line 10-no_more_js 11-directories 12-newest_files 13-unique 14-findthatword 15-countthatword 16-whatsnext 17-hidethisword 18-letteronly 19-AZ 20-hiago 21-reverse 22-users_and_homes 100-empty_casks 101-gifs 102-acrostic 103-the_biggest_fan > /dev/null

echo 'echo "Hello, World"' >> 0-hello_world && echo 'cat /etc/passwd' >> 2-hellofile && echo 'cat /etc/passwd /etc/hosts' >> 3-twofiles && echo 'tail /etc/passwd' >> 4-lastlines && echo 'head /etc/passwd' >> 5-firstlines && echo 'head -n 3 iacta | tail -n 1' >> 6-third_line && echo 'echo "ls -la" > ls_cwd_content' >> 8-cwd_state && echo 'tail -n 1 iacta >> iacta' >> 9-duplicate_last_line && echo 'find . -type f -name "*.js" -delete' >> 10-no_more_js && echo 'find -mindepth 1 -type d | wc -l' >> 11-directories && echo 'ls -lt | head -n 10' >> 12-newest_files && echo 'sort | uniq -u' >> 13-unique && echo 'grep -i "root" /etc/passwd' >> 14-findthatword && echo 'grep -c -i "bin" /etc/passwd' >> 15-countthatword && echo 'grep -i "root" -A 3 /etc/passwd' >> 16-whatsnext && echo 'grep -iv bin /etc/passwd' >> 17-hidethisword && echo 'grep -i "^[a-z]" /etc/ssh/sshd_config' >> 18-letteronly && echo 'tr "A" "Z" | tr "c" "e"' >> 19-AZ && echo 'tr -d "cC"' >> 20-hiago && echo 'rev' >> 21-reverse && echo 'cut -d ":" -f 1,6 /etc/passwd | sort' >> 22-users_and_homes && echo 'find . -empty | rev | cut -d "/" -f 1 | rev' >> 100-empty_casks && echo 'find -type f -name "*.gif" | rev | cut -d "/" -f 1 | cut -d "." -f 2- | rev | LC_ALL=C sort -f' >> 101-gifs && echo "cut -c 1 | paste -s -d ''" >> 102-acrostic && echo "tail -n +2 | cut -f -1 | sort -k 1 | uniq -c | sort -rnk 1 | head -n 11 | rev | cut -d ' ' -f -1 | rev" >> 103-the_biggest_fan

chmod u+x 0-hello_world && chmod u+x 1-confused_smiley && chmod u+x 2-hellofile 3-twofiles && chmod u+x 4-lastlines && chmod u+x 5-firstlines && chmod u+x 6-third_line && chmod u+x 7-file && chmod u+x 8-cwd_state && chmod u+x 9-duplicate_last_line && chmod u+x 10-no_more_js && chmod u+x 11-directories && chmod u+x 12-newest_files && chmod u+x 13-unique && chmod u+x 14-findthatword && chmod u+x 15-countthatword && chmod u+x 16-whatsnext && chmod u+x 17-hidethisword && chmod u+x 18-letteronly && chmod u+x 19-AZ && chmod u+x 20-hiago && chmod u+x 21-reverse && chmod u+x 22-users_and_homes && chmod u+x 100-empty_casks && chmod u+x 101-gifs && chmod u+x 102-acrostic && chmod u+x 103-the_biggest_fan

./0-hello_world && ./1-confused_smiley && ./2-hellofile 3-twofiles && ./4-lastlines && ./5-firstlines && ./6-third_line && ./7-file && ./8-cwd_state && ./9-duplicate_last_line && ./10-no_more_js && ./11-directories && ./12-newest_files && ./13-unique && ./14-findthatword && ./15-countthatword && ./16-whatsnext && ./17-hidethisword && ./18-letteronly && ./19-AZ && ./20-hiago && ./21-reverse && ./22-users_and_homes && ./100-empty_casks && ./101-gifs && ./102-acrostic && ./103-the_biggest_fan
